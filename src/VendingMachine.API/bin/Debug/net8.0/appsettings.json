{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=5432;Database=vendingmachine;User Id=postgres;Password=Post123;Include Error Detail=true;Timeout=300;CommandTimeout=300;SSL Mode=Prefer;Trust Server Certificate=true;Pooling=true;Minimum Pool Size=5;Maximum Pool Size=20;No Reset On Close=true;Keepalive=30"
  },
  "Jwt": {
    "Key": "VendingMachineSecretKey2024!@#$%^&*()_+",
    "Issuer": "VendingMachineAPI",
    "Audience": "VendingMachineUsers",
    "ExpireMinutes": 60,
    "RefreshTokenExpireDays": 7
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "Npgsql": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/vendingmachine-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "PostgresSettings": {
    "AutoMigrate": true,
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 5,
    "MaxRetryDelaySeconds": 30
  },
  "AllowedHosts": "*",
  "DebugSettings": {
    "DetailedErrors": true,
    "LogSqlParameters": false
  }
}